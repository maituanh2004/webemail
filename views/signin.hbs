<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f0f4f8;
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .signin-form {
        background-color: #ffffff;
        padding: 30px 20px;
        border-radius: 12px;
        max-width: 400px;
        margin: auto;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .signin-form div {
        margin-bottom: 20px;
    }

    .signin-form label {
        font-weight: bold;
        color: #333;
    }

    .signin-form input[type="email"],
    .signin-form input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-top: 5px;
        transition: border-color 0.3s ease;
    }

    .signin-form input:focus {
        border-color: #762857;
        outline: none;
    }

    .signin-form button {
        width: 100%;
        padding: 10px;
        background-color: #5b1d2e;
        color: #1A1A2E;
        border: none;
        border-radius: 20px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .signin-form button:hover {
        background-color: #7d3c5c;
        transform: scale(1.05);
    }

    .signin-form a {
        display: block;
        text-align: center;
        color: #007bff;
        text-decoration: none;
        margin-top: 15px;
        font-weight: bold;
    }

    .signin-form a:hover {
        color: #0056b3;
    }
</style>
<h2>Sign In</h2>

{{#if error}}
    <p class="error-message">{{error}}</p>
{{/if}}

<form id="signinForm" class="signin-form" action="/login" method="POST">
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
    </div>
    <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
    </div>
    <button type="submit">Sign In</button>
</form>
<span>Don't have an account? <a href="/signup">Sign up</a></span>